{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/anthropic", "dest": "/api/anthropic.js" },
    { "src": "/api/elevenlabs", "dest": "/api/elevenlabs.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
